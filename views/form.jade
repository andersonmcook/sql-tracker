doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')

  form(method='POST' action='/form')
    .input-group
      label(for='date') Date
      input#date(type='date' name='date' required)
    .input-group
      label(for='weight') Weight
      input#weight(type='number' name='weight' required)
    .input-group
      label(for='steps') Steps
      input#date(type='number' name='steps' required)
    .input-group
      input(type='submit' value='Submit')


